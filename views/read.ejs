<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back to home</a>
        <h1 class="tracking-tighter text-3xl mb-3">All User</h1>
        <div class="users flex flex-wrap gap-3">
            <% users.forEach(function(user){  %>
                <div class="user p-4 bg-zinc-700 rounded-lg max-w-72">
                    <div class="w-full h-52 rounded-lg bg-zinc-500 ovrerfloe-hidden">
                        <img class="w-full h-full objevt-cover" src="<%= user.image %>">
                    </div>
                    <h3 class="text-1xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3">
                        <a class="text-zinc-200 mt-10" href="/edit/<%= user._id %>">Edit user</a>
                        <a class="text-red-700 mt-10" href="/delete/<%= user._id %>">Delete user</a>
                    </div>
                </div> 
            <% }) %>
        </div>
    </div>
</body>
</html>